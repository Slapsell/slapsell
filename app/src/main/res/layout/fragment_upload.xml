<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.upload"
    android:fitsSystemWindows="true"
    android:background="@color/level1">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/main.appbar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true"
        android:elevation="20dp"
        >
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/main.collapsing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="28dp"
            app:expandedTitleMarginEnd="68dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:id="@+id/upload_image"
            android:scaleType="centerCrop"
            android:fitsSystemWindows="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/appicon"
            app:layout_collapseMode="parallax"
            />
            </RelativeLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/main.toolbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin"
                app:title="SlapSell"
                android:layout_marginBottom="8dp"
                />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@color/level2"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Spinner
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_margin="15dp"
                android:id="@+id/upload_spinner"
                android:textAlignment="center"
                android:entries="@array/type"
                android:padding="10dp"
                android:elevation="10dp"
                android:background="@drawable/boundaries"
            />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:hint="Name"
                android:textColor="@color/cardview_dark_background"
                android:padding="10dp"
                android:textStyle="bold"
                android:background="@drawable/boundaries"
                android:id="@+id/upload_name"
                android:elevation="10dp"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:hint="Description"
                android:padding="10dp"
                android:inputType="textMultiLine"
                android:lines="8"
                android:minLines="6"
                android:textStyle="bold"
                android:gravity="top|left"
                android:elevation="10dp"
                android:scrollbars="vertical"
                android:id="@+id/upload_description"
                android:background="@drawable/boundaries"
                android:textSize="20dp"
                android:layout_gravity="top"/>
            <EditText
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:id="@+id/upload_price"
                android:hint="Price"
                android:inputType="number"
                android:textStyle="bold"
                android:elevation="10dp"
                android:background="@drawable/boundaries"
                android:padding="10dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Post"
                android:id="@+id/poost"
                android:textStyle="bold"
                android:textSize="22dp"
                android:background="@drawable/boundaries"
                android:backgroundTint="@color/level1"
                android:layout_margin="15dp"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/upload_float"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="10dp"
        android:elevation="20dp"
        android:src="@drawable/add_image"
        app:layout_anchor="@id/main.appbar"
        app:layout_anchorGravity="bottom|right" />
</android.support.design.widget.CoordinatorLayout>