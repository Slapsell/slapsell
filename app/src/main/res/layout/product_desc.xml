<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.upload"
    android:orientation="vertical"
    android:background="@color/level1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/level1">
            <ImageView
                android:id="@+id/desc_image"
                android:layout_width="338dp"
                android:layout_height="350dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/add_image" />
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <TextView
                            android:id="@+id/desc_ownername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:text="Owner_name"
                            android:textColor="@color/level3"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/desc_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="5dp"
                            android:layout_alignStart="@+id/desc_ownername"
                            android:text="posted at" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="25dp"
                            android:background="@null"
                            android:id="@+id/desc_profile"
                            android:text="View Profile"
                            android:textColor="@color/level4"
                            android:textSize="18dp"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="330dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:background="#CBB0B0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/desc_name"
                android:text="cooler"
                android:textColor="@color/level4"
                android:gravity="center"
                android:textSize="25dp"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/desc_price"
                android:text="200â‚¹"
                android:textSize="35dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_marginLeft="25dp"/>
            <View
                android:layout_width="330dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:background="#CBB0B0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="22dp"
                android:id="@+id/desc_desc"
                android:padding="2dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/view_profile"
        android:id="@+id/view"/>
</android.support.design.widget.CoordinatorLayout>